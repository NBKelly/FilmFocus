<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/history_timeline_item_constraintLayout"
    android:clickable="true">

    <ImageView
        android:id="@+id/timeline_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/timeline_item_film_poster"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="#2d2d2d"
        android:clickable="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/timeline_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_star_watched_frame"
        tools:srcCompat="@drawable/cover_placeholder"></ImageView>


    <RatingBar
        android:id="@+id/timeline_item_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:rating="4"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="@+id/date_holder_constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/date_holder_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/date_holder_constraintLayout" />

    <TextView
        android:id="@+id/timeline_item_review_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:text=""
        android:textAlignment="gravity"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/timeline_item_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/timeline_item_ratingBar"
        tools:text='"Amazing film! One of my all time favourites"' />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_holder_constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/timeline_item_review_tv"
        app:layout_constraintStart_toStartOf="@+id/timeline_item_review_tv"
        app:layout_constraintTop_toTopOf="@+id/timeline_item_film_poster">

        <TextView
            android:id="@+id/timeline_item_date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="January" />

        <TextView
            android:id="@+id/timeline_item_date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timeline_item_date_month"
            app:layout_constraintTop_toTopOf="@+id/timeline_item_date_month"
            tools:text="10th" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/icon_star_watched_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/timeline_line"
        app:layout_constraintEnd_toEndOf="@+id/timeline_line"
        app:layout_constraintStart_toStartOf="@+id/timeline_line"
        app:layout_constraintTop_toTopOf="@+id/timeline_line">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_white_solid_24dp" />

        <ImageView
            android:id="@+id/icon_watched_dropped_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_watched_darkgreen_24dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/timeline_item_tv_WATCHED_DROPPED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Watched"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/timeline_item_film_poster"
        app:layout_constraintEnd_toEndOf="@+id/timeline_item_film_poster"
        app:layout_constraintStart_toStartOf="@+id/timeline_item_film_poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Watched" />

</androidx.constraintlayout.widget.ConstraintLayout>